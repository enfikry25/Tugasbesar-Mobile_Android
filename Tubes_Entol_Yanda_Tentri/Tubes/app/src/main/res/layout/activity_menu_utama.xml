<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.entolfikry.tubes.MenuUtama">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calon Anggota"
        android:id="@+id/buttoncalon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonjadwal"
        android:layout_alignBottom="@+id/buttonjadwal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jadwal dan \n Program latihan"
        android:id="@+id/buttonjadwal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="tombolJadwal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Calon Anggota"
        android:id="@+id/textView4"
        android:textColor="#f57b09"
        android:layout_below="@+id/buttoncalon"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="UKM Basket Poltekpos"
        android:id="@+id/textView5"
        android:textColor="#f57b09"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_below="@+id/buttoncalon"
        android:src="@drawable/basket"
        android:layout_above="@+id/listView"
        android:layout_toStartOf="@+id/textView4" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/basket"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_toEndOf="@+id/textView4"
        android:layout_below="@+id/buttonjadwal" />

</RelativeLayout>
